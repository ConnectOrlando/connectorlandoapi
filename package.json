{
  "name": "connectorlandoapi",
  "version": "1.0.0",
  "description": "api",
  "repository": "https://github.com/ConnectOrlando/connectorlandoapi.git",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "yarn && nodemon -w .env -w . server.js",
    "debug": "node --inspect-brk server.js",
    "lint": "eslint --ext=.js --ignore-path=.gitignore src",
    "lint:fix": "yarn run lint --fix",
    "format": "prettier --write --ignore-path=.gitignore \"src/**/*.{js,jsx}\"",
    "prisma": "npx prisma db push && npx prisma studio",
    "prisma:reset": "npx prisma db push && npx prisma db seed && npx prisma studio",
    "test": "npx majestic",
    "test:cli": "jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --reporters='default' --reporters='./tests/infra/githubActionsReporter'"
  },
  "author": "Laura Boettcher, Pablo Najera",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash-es": "^4.17.21",
    "mailgun.js": "^8.2.1",
    "morgan": "^1.10.0",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-no-floating-promise": "^1.0.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "jest": "^29.6.2",
    "lint-staged": "^13.1.1",
    "majestic": "^1.8.1",
    "nodemon": "^2.0.20",
    "prettier": "2.8.0",
    "prisma": "^4.11.0",
    "prismock": "^1.14.0",
    "simple-git-hooks": "2.8.1",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "seed": "node prisma/seed/index.js"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "yarn run format",
    "post-merge": "yarn && npx prisma db push"
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --fix"
  },
  "jest": {
    "transform": {},
    "setupFiles": [
      "<rootDir>/.jest/setEnvVars.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/.jest/setupPrisma.js"
    ]
  },
  "majestic": {
    "env": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    }
  }
}
